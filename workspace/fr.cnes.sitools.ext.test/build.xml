<!DOCTYPE project [
   <!ENTITY struct  SYSTEM "build/struct.xml">
<!ENTITY taskdef SYSTEM "build/taskdef.xml">
<!ENTITY targets SYSTEM "build/targets.xml"> 
]>
<project name="fr.cnes.sitools.ext.test" default="build-extensions" basedir=".">

	<!-- Import des properties -->
	&struct;
	<!-- Import des tasks -->
	&taskdef;
	<!-- Import des targets -->
	&targets;
	
	<target name="build-extensions" depends="init, clean, prepare, prepare-extensions,compile-extensions,jar-extensions,cleanup-extensions" />
	
	<target name="execute-tests-ext" depends="test-init, test-compile, test" />
	
	<target name="javadoc-project" description="Generation du ZIP contenant la javadoc du projet" depends="init, clean, prepare, javadoc, javadoc-tests" />
	

</project>

