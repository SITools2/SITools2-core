        <dependency>
            <groupId>org.restlet.jse</groupId>
            <artifactId>org.restlet.ext.solr</artifactId>
            <version>4.5.0</version>
            <scope>system</scope>
            <systemPath>
                ${basedir}/../repository/org/restlet/jse/org.restlet.ext.solr/4.5.0/org.restlet.ext.solr-4.5.0.jar
            </systemPath>
