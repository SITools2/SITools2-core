        </dependency>

        <!--  Restlet -->
        <dependency>
            <groupId>org.restlet.jse</groupId>
            <artifactId>org.restlet-patched</artifactId>
            <version>2.0.5</version>
            <scope>system</scope>
            <systemPath>
                ${basedir}/../repository/org/restlet/jse/org.restlet-patched/2.0.5/org.restlet-patched-2.0.5.jar
            </systemPath>
        </dependency>

        <dependency>
            <groupId>org.restlet.jse</groupId>
            <artifactId>org.restlet.patched</artifactId>
            <version>1.0.5</version>
            <scope>system</scope>
            <systemPath>
                ${basedir}/../repository/org/restlet/jse/org.restlet.patched/1.0.5/org.restlet.patched-1.0.5.jar
